#!/usr/bin/env bash
# Screenshot area with annotation

FILENAME="$HOME/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png"

# Freeze and select area
grim -g "$(slurp)" "$FILENAME"

# Open in satty for annotation
if [ -f "$FILENAME" ]; then
    satty --filename "$FILENAME" \
          --output-filename "$FILENAME" \
          --early-exit \
          --copy-command wl-copy \
          --initial-tool arrow
fi
