// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  // assistant settings
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },

  // editor settings
  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "format_on_save": "off",

  // UI settings
  "ui_font_size": 15,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 15,
  "buffer_line_height": {
    "custom": 1.25
  },
  "terminal": {
    "line_height": {
      "custom": 1.25
    }
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "auto"
  },
  "theme": {
    "mode": "system",
    "light": "Zek Light",
    "dark": "Zek Light"
  }
}
